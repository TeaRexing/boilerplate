{
  "name": "npm-boilerplate",
  "version": "0.0.1",
  "description": "A super simple boilerplate to create static websites using only npm scripts",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "sass --no-source-map src/scss/index.scss ./public_html/index.css",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "css:autoprefixer": "postcss -u autoprefixer -r public_html/index.css",
    "css:purify": "purifycss public_html/index.css public_html/*.html --min --info --out public_html/index.css",
    "watch:css": "onchange \"src/scss/**/*\" -- npm run build:css",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "compress:images": "imagemin src/img/**/* --out-dir=public_html/",
    "watch:fonts": "onchange \"src/fonts/*\" -- npm run build:fonts",
    "build:fonts": "copy \"src/fonts/**/*\" public_html",
    "watch:assets": "onchange \"src/assets/*\" -- npm run build:assets",
    "build:assets": "copy \"src/assets/**/*\" public_html",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js/**/*\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/pages/**/*\" -- npm run build:html",
    "watch:php": "onchange \"src/php/*\" -- npm run build:php",
    "build:php": "copy \"src/php/*\" public_html",
    "server:php": "php -S localhost:8080 -t public_html",
    "server:browsersync": "browser-sync start --proxy \"localhost:8080\" --directory \"public_html\" --files \"public_html\"",
    "serve": "run-p server:*",
    "watch": "run-p build:* && run-p serve watch:*",
    "build": "run-p build:*",
    "production": "npm run purge && run-p build:* && npm run compress:images && npm run css:purify",
    "purge": "rimraf public_html/",
    "publish": "./sync.sh"
  },
  "keywords": [],
  "author": "Patrick Zempel",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "autoprefixer": "^10.4.24",
    "babel-loader": "^10.0.0",
    "browser-sync": "^3.0.4",
    "copy": "^0.3.2",
    "css-loader": "^7.1.3",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-webpack-plugin": "^5.0.2",
    "htmlnano": "^3.0.0",
    "imagemin-cli": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^11.0.1",
    "postcss-scss": "^4.0.9",
    "posthtml": "^0.16.7",
    "posthtml-cli": "^0.10.0",
    "posthtml-lorem": "^1.0.0",
    "posthtml-modules": "^0.9.1",
    "purify-css": "^1.2.5",
    "rimraf": "^6.1.2",
    "sass": "^1.97.3",
    "style-loader": "^4.0.0",
    "stylelint": "^17.1.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "cookie-notice": "^1.3.9",
    "glightbox": "^3.3.1",
    "jquery": "^4.0.0",
    "jquery-migrate": "^4.0.2",
    "macy": "^2.5.1"
  }
}
